<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activity.UpdateActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:text="@string/monday"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:text="@string/wktMulai"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/add_wktMulai"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@+id/start"
        android:drawableStart="@drawable/ic_time"
        android:hint="@string/hint1"
        android:background="@drawable/edit_text"
        android:textColor="#B8B8B8"
        android:paddingStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="time"/>

    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_wktMulai"
        android:textColor="@color/blue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="@string/wktSelesai"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/add_wktSelesai"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@+id/end"
        android:drawableStart="@drawable/ic_time"
        android:hint="@string/hint1"
        android:background="@drawable/edit_text"
        android:textColor="#B8B8B8"
        android:paddingStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="time"/>

    <TextView
        android:id="@+id/jadwal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_wktSelesai"
        android:textColor="@color/blue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="@string/jadwal"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/add_jadwal"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@+id/jadwal"
        android:hint="@string/hint2"
        android:background="@drawable/edit_text"
        android:textColor="#B8B8B8"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:maxLines="3"
        android:inputType="text"/>


    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_jadwal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="86dp"
        android:background="@drawable/rounded_button"
        android:text="@string/save_changes" />

</RelativeLayout>